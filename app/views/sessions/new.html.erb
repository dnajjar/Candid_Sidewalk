<div class="col-xs-6 col-xs-offset-3">
  <% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <% end %>
  <h2>Sign In</h2>

  <%= form_tag sign_in_path do %>
    <div>
      <%= label_tag :email %>
      <%= email_field_tag :email, '', class: "form-control" %>
    </div>
    <div>
      <%= label_tag :password %>
      <%= password_field_tag :password, '', class: "form-control" %>
    </div>
    <%= submit_tag "Sign In", class: "btn btn-block btn-round btn-d" %>
  <% end %>
</div>